<%include ../partials/header%>
	<h1><%=blog.title%></h1>
	<img src="<%=blog.image%>">
	<p><%=blog.body%></p>
	
	<p>
		<a class="btn btn-success" href="/blogs/<%=blog._id%>/comments/new">Add new comment</a>
	</p>

	<%blog.comments.forEach(function(comment){%>
		<p>
			<strong><%=comment.author%></strong> - <%=comment.text%>
		</p>
	<%})%>

<%include ../partials/footer%>