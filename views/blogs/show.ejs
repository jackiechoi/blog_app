	<%include ../partials/header%>

<div class="container">
	<div class="row">
		<div class="col-md-3">
			<p class="lead">Jackie's Blog</p>
			<div class="list-group">
				<li class="list-group-item active">Info 1</li>
				<li class="list-group-item">Info 2</li>
				<li class="list-group-item">Info 3</li>
			</div>
		</div>
		<div id="status" class="col-md-9">
			<div class="thumbnail" id="show_blog">
				<img class="img-responsive" src="<%=blog.image%>" >
				<div class="caption-full">
					<h5 class="pull-right"><%=blog.date%></h5>
					<h3><a href="#"><%=blog.title%></a></h3>
					<p id="content"><%=blog.body%></p>
				</div>
			</div>

			<script>
			 $(function(){
			 		console.log(window.location.pathname)
				  var annotation = $('#content').annotator();
				 
				  annotation.annotator('addPlugin', 'Store', {
				    prefix: '/annotation',
				    annotationData: {
        			'uri': 'http://localhost:3001' + window.location.pathname,
        			page: window.location.pathname
      			},
				    urls: {
				        create:  '/store',
				        update:  '/update/:id',
				        destroy: '/delete/:id',
				        search:  '/search'
				    }
				  });
				});
			</script>

			<div class="well">
				<div class="text-right">
					<a class="btn btn-success" href="/blogs/<%=blog._id%>/comments/new">Add new comment</a>
					<button type="button" class="btn btn-default"><span class="glyphicon glyphicon-heart" aria-hidden="true"></span></button>
				</div>
				<hr>
				<%blog.comments.forEach(function(comment){%>
					<div class="row">
						<div class="col-md-12">
							<strong><%=comment.author%></strong>
							<span class="pull-right">5 days ago</span>
							<p>
								<%=comment.text%>
							</p>
						</div>
					</div>
				<%})%>
			</div>
		</div>
	</div>
</div>

<%include ../partials/footer%>