<%include ../partials/header%>

<div class="container">
	<div class="row">
		<h1 style="text-align: center">Create a New Blog Entry</h1>
		<div style="width: 30%; margin: 30px auto">
			<form action="/blogs" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="title" placeholder="Title" required>
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="image" placeholder="Image" required>
				</div>
				<div class="form-group">
					<textarea class="form-control" rows="5" type="text" name="body" placeholder="Body" required></textarea>
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">Submit</button>
				</div>
			</form>
			<a href="/blogs">Go Back</a>
			</div>
	</div>
</div>
<%include ../partials/footer%>